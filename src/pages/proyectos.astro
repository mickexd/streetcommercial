<script>
  document.addEventListener("DOMContentLoaded", () => {
    const projectItems = document.querySelectorAll(".project-list-item");
    const previewContents = document.querySelectorAll(".preview-content");
    const filterBtns = document.querySelectorAll(".filter-btn");
    const mobileModalOverlay = document.getElementById("mobileModalOverlay");
    const mobileModalContent = document.getElementById("mobileModalContent");
    const mobileModalClose = document.getElementById("mobileModalClose");
    let activeProjectId: string | null = null;

    // Check if mobile view (matches the CSS breakpoint)
    const isMobile = () => window.matchMedia("(max-width: 1024px)").matches;

    // Filter functionality
    filterBtns.forEach((btn) => {
      btn.addEventListener("click", () => {
        filterBtns.forEach((b) => b.classList.remove("active"));
        btn.classList.add("active");

        const filter = (btn as HTMLElement).dataset.filter;

        projectItems.forEach((item) => {
          const status = (item as HTMLElement).dataset.status;
          if (filter === "all" || status === filter) {
            (item as HTMLElement).style.display = "flex";
          } else {
            (item as HTMLElement).style.display = "none";
          }
        });
      });
    });

    // Function to open mobile modal
    const openMobileModal = (projectId: string) => {
      if (!mobileModalOverlay || !mobileModalContent) return;

      // Find the preview content for this project
      const targetPreview = document.querySelector(
        `.preview-content[data-preview="${projectId}"]`,
      );

      if (targetPreview) {
        // Clone the content into the modal
        mobileModalContent.innerHTML = "";
        const clonedContent = targetPreview.cloneNode(true) as HTMLElement;
        clonedContent.classList.add("active");
        mobileModalContent.appendChild(clonedContent);

        // Show the modal
        mobileModalOverlay.classList.add("active");
        document.body.style.overflow = "hidden";
      }
    };

    // Function to close mobile modal
    const closeMobileModal = () => {
      if (!mobileModalOverlay) return;
      mobileModalOverlay.classList.remove("active");
      document.body.style.overflow = "";
    };

    // Close modal on button click
    mobileModalClose?.addEventListener("click", closeMobileModal);

    // Close modal on overlay click
    mobileModalOverlay?.addEventListener("click", (e) => {
      if (e.target === mobileModalOverlay) {
        closeMobileModal();
      }
    });

    // Close modal on Escape key
    document.addEventListener("keydown", (e) => {
      if (
        e.key === "Escape" &&
        mobileModalOverlay?.classList.contains("active")
      ) {
        closeMobileModal();
      }
    });

    // Hover/Click functionality for project items
    projectItems.forEach((item) => {
      // Click handler for mobile
      item.addEventListener("click", () => {
        if (isMobile()) {
          const projectId = (item as HTMLElement).dataset.project;
          if (projectId) {
            openMobileModal(projectId);
          }
        }
      });

      // Hover handler for desktop
      item.addEventListener("mouseenter", () => {
        if (isMobile()) return; // Skip hover on mobile

        const projectId = (item as HTMLElement).dataset.project;
        activeProjectId = projectId || null;

        // Remove active class from all items
        projectItems.forEach((i) => i.classList.remove("active"));
        item.classList.add("active");

        // Hide all previews and default
        previewContents.forEach((content) => {
          content.classList.remove("active", "default-active");
        });

        // Show corresponding preview
        const targetPreview = document.querySelector(
          `.preview-content[data-preview="${projectId}"]`,
        );
        if (targetPreview) {
          targetPreview.classList.add("active");
        }
      });
    });

    // Keep selection when leaving list - don't reset (desktop only)
    const projectsList = document.querySelector(".projects-items");
    if (projectsList) {
      projectsList.addEventListener("mouseleave", () => {
        if (isMobile()) return; // Skip on mobile

        // Don't reset if there's an active project
        if (!activeProjectId) {
          projectItems.forEach((i) => i.classList.remove("active"));
          previewContents.forEach((content) => {
            content.classList.remove("active");
          });
          const defaultPreview = document.querySelector(
            '.preview-content[data-preview="default"]',
          );
          if (defaultPreview) {
            defaultPreview.classList.add("default-active");
          }
        }
      });
    }
  });
</script>
