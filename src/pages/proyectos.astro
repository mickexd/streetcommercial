<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/webp" href="/logo-simple.webp" />
    <title>Proyectos | STREET Inteligencia Comercial</title>
    <meta
      name="description"
      content="Descubre todos los proyectos comerciales de STREET: plazas, locales comerciales y oportunidades de inversión en Zapopan y ZMG."
    />
  </head>
  <body>
    <Navbar />

    <main class="proyectos-page">
      <!-- Hero Section -->
      <section class="proyectos-hero">
        <div class="hero-content">
          <span class="hero-label">Portafolio</span>
          <h1 class="hero-title">Proyectos Street</h1>
          <p class="hero-subtitle">
            Explora nuestra cartera de activos comerciales diseñados para
            generar valor y rentabilidad sostenida.
          </p>
        </div>
        <div class="hero-stats">
          <div class="stat-item">
            <span class="stat-number">11</span>
            <span class="stat-label">Proyectos</span>
          </div>
          <div class="stat-item">
            <span class="stat-number">250+</span>
            <span class="stat-label">Locales</span>
          </div>
          <div class="stat-item">
            <span class="stat-number">$2.5B+</span>
            <span class="stat-label">MXN en activos</span>
          </div>
        </div>
      </section>

      <!-- Projects List Section -->
      <section class="projects-list-section">
        <div class="projects-container">
          <!-- Left: Project List -->
          <div class="projects-list">
            <div class="list-header">
              <span class="list-count">{projects.length} proyectos</span>
              <div class="list-filters">
                <button class="filter-btn active" data-filter="all"
                  >Todos</button
                >
                <button class="filter-btn" data-filter="preventa"
                  >Preventa</button
                >
                <button class="filter-btn" data-filter="operando"
                  >Operando</button
                >
              </div>
            </div>

            <div class="projects-items">
              {
                projects.map((project, index) => (
                  <div
                    class="project-list-item"
                    data-project={project.id}
                    data-status={
                      project.status.toLowerCase().includes("preventa")
                        ? "preventa"
                        : project.status.toLowerCase().includes("operando")
                          ? "operando"
                          : "otros"
                    }
                  >
                    <div class="item-number">
                      {String(index + 1).padStart(2, "0")}
                    </div>
                    <div class="item-content">
                      <div class="item-main">
                        <span class="item-category">{project.category}</span>
                        <h3 class="item-name">{project.name}</h3>
                        <span class="item-location">{project.location}</span>
                      </div>
                      <div class="item-meta">
                        <span
                          class="item-status"
                          data-status={
                            project.status.toLowerCase().includes("operando")
                              ? "active"
                              : project.status
                                    .toLowerCase()
                                    .includes("preventa")
                                ? "presale"
                                : "building"
                          }
                        >
                          {project.status}
                        </span>
                        <svg
                          class="item-arrow"
                          width="24"
                          height="24"
                          viewBox="0 0 24 24"
                          fill="none"
                        >
                          <path
                            d="M7 17L17 7M17 7H7M17 7V17"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                          />
                        </svg>
                      </div>
                    </div>
                  </div>
                ))
              }
            </div>
          </div>

          <!-- Mobile Modal Overlay -->
          <div class="mobile-modal-overlay" id="mobileModalOverlay">
            <div class="mobile-modal">
              <button
                class="mobile-modal-close"
                id="mobileModalClose"
                aria-label="Cerrar"
              >
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                  <path
                    d="M18 6L6 18M6 6L18 18"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"></path>
                </svg>
              </button>
              <div class="mobile-modal-content" id="mobileModalContent">
                <!-- Content will be cloned here -->
              </div>
            </div>
          </div>

          <!-- Right: Project Preview Panel -->
          <div class="project-preview">
            <div class="preview-container">
              {
                projects.map((project) => (
                  <div class="preview-content" data-preview={project.id}>
                    <div class="preview-image">
                      <div class="image-wrapper">
                        <img
                          src={project.image}
                          alt={project.name}
                          onerror="this.src='/images/prev-1.jpg'"
                        />
                        <div class="image-overlay" />
                      </div>
                      <div class="preview-badge">
                        <span class="badge-status">{project.status}</span>
                      </div>
                    </div>

                    <div class="preview-info">
                      <div class="preview-header">
                        <span class="preview-category">{project.category}</span>
                        <h2 class="preview-title">{project.name}</h2>
                        <p class="preview-location">{project.location}</p>
                      </div>

                      <p class="preview-pitch">{project.pitch}</p>

                      <div class="preview-specs">
                        <div class="spec-item">
                          <span class="spec-label">Unidades</span>
                          <span class="spec-value">{project.units}</span>
                        </div>
                        <div class="spec-item">
                          <span class="spec-label">Rango de precio</span>
                          <span class="spec-value">{project.priceRange}</span>
                        </div>
                        <div class="spec-item">
                          <span class="spec-label">ROI estimado</span>
                          <span class="spec-value">{project.roi}</span>
                        </div>
                      </div>

                      <div class="preview-usp">
                        <span class="usp-label">Destacados</span>
                        <ul class="usp-list">
                          {project.usp.map((point) => (
                            <li class="usp-item">
                              <svg
                                width="16"
                                height="16"
                                viewBox="0 0 16 16"
                                fill="none"
                              >
                                <circle
                                  cx="8"
                                  cy="8"
                                  r="6"
                                  stroke="currentColor"
                                  stroke-width="1.5"
                                />
                                <circle
                                  cx="8"
                                  cy="8"
                                  r="3"
                                  fill="currentColor"
                                />
                              </svg>
                              <span>{point}</span>
                            </li>
                          ))}
                        </ul>
                      </div>

                      <button class="preview-cta">
                        <span>Ver detalles completos</span>
                        <svg
                          width="20"
                          height="20"
                          viewBox="0 0 20 20"
                          fill="none"
                        >
                          <path
                            d="M4 10H16M16 10L11 5M16 10L11 15"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                          />
                        </svg>
                      </button>
                    </div>
                  </div>
                ))
              }

              <!-- Default State -->
              <div
                class="preview-content default-active"
                data-preview="default"
              >
                <div class="preview-image placeholder">
                  <div class="placeholder-content">
                    <img
                      src="/logo-full.webp"
                      alt="STREET"
                      class="placeholder-logo"
                    />
                    <p class="placeholder-text">
                      Selecciona un proyecto para ver detalles
                    </p>
                  </div>
                </div>
                <div class="preview-info placeholder-info">
                  <div class="placeholder-stats">
                    <div class="ph-stat">
                      <span class="ph-number">11</span>
                      <span class="ph-label">Proyectos activos</span>
                    </div>
                    <div class="ph-stat">
                      <span class="ph-number">6</span>
                      <span class="ph-label">En preventa</span>
                    </div>
                    <div class="ph-stat">
                      <span class="ph-number">4</span>
                      <span class="ph-label">Operando</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

    <Footer />
  </body>
</html>

<style>
  /* CSS Variables */
  :root {
    --color-dark: #15152a;
    --color-cream: #f7efe6;
    --color-yellow: #fcc419;
    --color-gray: #6b6b7b;
    --transition-smooth: cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Hero Section */
  .proyectos-hero {
    min-height: 60vh;
    background: var(--color-cream);
    padding: 15vh 5vw 10vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: relative;
    overflow: hidden;
    text-align: center;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 900px;
  }

  .hero-label {
    font-family: "Neue Montreal", sans-serif;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--color-dark);
    opacity: 0.6;
    display: block;
    margin-bottom: 1.5rem;
  }

  .hero-title {
    font-family: "Monument Extended", sans-serif;
    font-size: clamp(2.5rem, 8vw, 6rem);
    color: var(--color-dark);
    font-weight: 800;
    line-height: 0.95;
    text-transform: uppercase;
    margin-bottom: 1.5rem;
    letter-spacing: -0.04em;
  }

  .hero-subtitle {
    font-family: "Neue Montreal", sans-serif;
    font-size: clamp(1rem, 1.5vw, 1.25rem);
    color: var(--color-dark);
    opacity: 0.7;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .hero-stats {
    display: flex;
    gap: 4rem;
    margin-top: 4rem;
    position: relative;
    z-index: 1;
    justify-content: center;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .stat-number {
    font-family: "Monument Extended", sans-serif;
    font-size: clamp(1.5rem, 3vw, 2.5rem);
    color: var(--color-dark);
    font-weight: 800;
  }

  .stat-label {
    font-family: "Neue Montreal", sans-serif;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-dark);
    opacity: 0.6;
  }

  /* Projects List Section */
  .projects-list-section {
    background: var(--color-cream);
    min-height: 100vh;
    padding: 5vh 0;
  }

  .projects-container {
    max-width: 1600px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 45% 55%;
    min-height: 90vh;
  }

  /* Left: Project List */
  .projects-list {
    padding: 3rem 2rem;
    border-right: 1px solid rgba(21, 21, 42, 0.1);
    display: flex;
    flex-direction: column;
  }

  .list-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid rgba(21, 21, 42, 0.1);
  }

  .list-count {
    font-family: "Neue Montreal", sans-serif;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-dark);
    opacity: 0.6;
  }

  .list-filters {
    display: flex;
    gap: 0.5rem;
  }

  .filter-btn {
    background: transparent;
    border: 1px solid rgba(21, 21, 42, 0.2);
    color: var(--color-dark);
    padding: 0.4rem 1rem;
    border-radius: 100px;
    font-family: "Neue Montreal", sans-serif;
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    cursor: pointer;
    transition: all 0.3s var(--transition-smooth);
  }

  .filter-btn:hover,
  .filter-btn.active {
    background: var(--color-dark);
    border-color: var(--color-dark);
    color: var(--color-cream);
  }

  .projects-items {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    overflow-y: auto;
    max-height: calc(90vh - 150px);
    padding-right: 0.5rem;
  }

  .projects-items::-webkit-scrollbar {
    width: 4px;
  }

  .projects-items::-webkit-scrollbar-track {
    background: rgba(21, 21, 42, 0.05);
  }

  .projects-items::-webkit-scrollbar-thumb {
    background: rgba(21, 21, 42, 0.2);
    border-radius: 2px;
  }

  .project-list-item {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding: 1.25rem 1rem;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.4s var(--transition-smooth);
    border: 1px solid transparent;
  }

  .project-list-item:hover {
    background: rgba(21, 21, 42, 0.03);
    border-color: rgba(21, 21, 42, 0.1);
  }

  .project-list-item.active {
    background: rgba(21, 21, 42, 0.05);
    border-color: var(--color-dark);
  }

  .item-number {
    font-family: "Monument Extended", sans-serif;
    font-size: 0.65rem;
    color: var(--color-dark);
    opacity: 0.3;
    min-width: 24px;
  }

  .item-content {
    flex: 1;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  .item-main {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .item-category {
    font-family: "Neue Montreal", sans-serif;
    font-size: 0.6rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-dark);
    opacity: 0.5;
  }

  .item-name {
    font-family: "Monument Extended", sans-serif;
    font-size: clamp(0.9rem, 1.2vw, 1.1rem);
    color: var(--color-dark);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: -0.02em;
  }

  .item-location {
    font-family: "Neue Montreal", sans-serif;
    font-size: 0.7rem;
    color: var(--color-dark);
    opacity: 0.5;
  }

  .item-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .item-status {
    font-family: "Neue Montreal", sans-serif;
    font-size: 0.6rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.3rem 0.75rem;
    border-radius: 100px;
    background: rgba(21, 21, 42, 0.1);
    color: var(--color-dark);
  }

  .item-status[data-status="active"] {
    background: rgba(76, 175, 80, 0.2);
    color: #2e7d32;
  }

  .item-status[data-status="presale"] {
    background: rgba(252, 196, 25, 0.3);
    color: #c17900;
  }

  .item-status[data-status="building"] {
    background: rgba(33, 150, 243, 0.2);
    color: #1565c0;
  }

  .item-arrow {
    color: var(--color-dark);
    opacity: 0;
    transform: translateX(-10px);
    transition: all 0.3s var(--transition-smooth);
  }

  .project-list-item:hover .item-arrow,
  .project-list-item.active .item-arrow {
    opacity: 1;
    transform: translateX(0);
  }

  /* Right: Project Preview Panel */
  .project-preview {
    padding: 3rem;
    position: sticky;
    top: 0;
    height: 90vh;
    background: var(--color-cream);
  }

  .preview-container {
    position: relative;
    height: 100%;
  }

  .preview-content {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    opacity: 0;
    visibility: hidden;
    transition: all 0.5s var(--transition-smooth);
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .preview-content.default-active {
    opacity: 1;
    visibility: visible;
  }

  .preview-content.active {
    opacity: 1;
    visibility: visible;
  }

  .preview-image {
    position: relative;
    height: 45%;
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid rgba(21, 21, 42, 0.1);
  }

  .preview-image.placeholder {
    background: rgba(21, 21, 42, 0.03);
    display: flex;
