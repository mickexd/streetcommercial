<style>
  :root {
    --color-dark: #14142c;
    --color-cream: #f7efe6;
    --color-yellow: #fcc419;
    --transition-speed: 300ms;
  }

  .footer {
    background-color: var(--color-dark);
    color: var(--color-cream);
    padding: 48px 24px;
    width: 100%;
    position: relative;
    z-index: 10;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 32px;
    text-align: center;
  }

  .footer-logo {
    width: 200px;
    height: auto;
    object-fit: contain;
    margin-bottom: 16px;
  }

  .footer-tagline {
    font-family: "Monument Extended", sans-serif;
    font-size: clamp(14px, 2vw, 18px);
    text-transform: uppercase;
    letter-spacing: -0.2px;
    font-weight: 800;
  }

  .footer-social {
    display: flex;
    gap: 24px;
    align-items: center;
  }

  .social-link {
    color: var(--color-cream);
    transition: all var(--transition-speed) ease;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
  }

  .social-link:hover {
    color: var(--color-yellow);
    transform: scale(1.1);
  }

  .social-link:focus {
    outline: 2px solid var(--color-yellow);
    outline-offset: 4px;
  }

  .footer-copyright {
    font-family: "Neue Montreal", sans-serif;
    font-size: 12px;
    font-weight: 400;
    opacity: 0.8;
  }

  @media (min-width: 768px) {
    .footer {
      padding: 80px 60px;
    }

    .footer-logo {
      width: 400px;
    }
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  const footer = document.querySelector(".footer");
  const elements = [
    ".footer-logo",
    ".footer-tagline",
    ".footer-social",
    ".footer-copyright",
  ];

  if (footer) {
    gsap.from(elements, {
      scrollTrigger: {
        trigger: footer,
        start: "top 90%",
      },
      y: 50,
      opacity: 0,
      duration: 1.2,
      ease: "power2.out",
      stagger: 0.1,
    });
  }
</script>
