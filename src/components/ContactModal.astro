<div class="contact-modal" id="contact-modal">
  <div class="contact-modal__backdrop"></div>
  <div class="contact-modal__container">
    <button
      class="contact-modal__close"
      id="contact-modal-close"
      aria-label="Cerrar"
    >
      <span></span>
      <span></span>
    </button>
    <div class="contact-modal__content">
      <div class="contact-container">
        <div class="contact-header">
          <span class="contact-label">Contacto</span>
          <h2 class="contact-title">Hablemos de tu inversión</h2>
          <p class="contact-subtitle">
            Déjanos tus datos y un asesor especializado se pondrá en contacto
            contigo.
          </p>
        </div>

        <form id="contact-form" class="contact-form">
          <div class="form-row">
            <div class="form-group">
              <label for="leadName">
                <span class="label-text">Nombre completo</span>
              </label>
              <div class="input-wrapper">
                <input
                  type="text"
                  id="leadName"
                  name="leadName"
                  required
                  placeholder="Tu nombre"
                />
                <div class="input-line"></div>
              </div>
            </div>

            <div class="form-group">
              <label for="phone">
                <span class="label-text">Teléfono</span>
              </label>
              <div class="input-wrapper">
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  required
                  placeholder="+52 (___) ___-____"
                />
                <div class="input-line"></div>
              </div>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label for="email">
                <span class="label-text">Correo electrónico</span>
              </label>
              <div class="input-wrapper">
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  placeholder="tu@email.com"
                />
                <div class="input-line"></div>
              </div>
            </div>

            <div class="form-group">
              <label for="businessName">
                <span class="label-text">Nombre del negocio</span>
              </label>
              <div class="input-wrapper">
                <input
                  type="text"
                  id="businessName"
                  name="businessName"
                  required
                  placeholder="Tu empresa (opcional)"
                />
                <div class="input-line"></div>
              </div>
            </div>
          </div>

          <div class="form-footer">
            <button type="submit" id="submit-btn" class="submit-button">
              <span class="btn-text">Enviar mensaje</span>
              <span class="btn-loader"></span>
              <svg
                class="btn-icon"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d="M5 12h14M12 5l7 7-7 7"></path>
              </svg>
            </button>
          </div>

          <div id="form-message" class="form-message hidden">
            <div class="message-content">
              <svg
                class="message-icon"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22 4 12 14.01 9 11.01"></polyline>
              </svg>
              <span class="message-text"></span>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<style>
  /* Contact Modal */
  .contact-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition:
      opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1),
      visibility 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .contact-modal.active {
    opacity: 1;
    visibility: visible;
  }

  .contact-modal__backdrop {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(21, 21, 42, 0.9);
    backdrop-filter: blur(10px);
  }

  .contact-modal__container {
    position: relative;
    width: 90%;
    max-width: 800px;
    max-height: 90vh;
    background-color: #f7efe6;
    border-radius: 16px;
    padding: 3rem;
    transform: scale(0.9) translateY(20px);
    transition: transform 0.4s cubic-bezier(0.19, 1, 0.22, 1);
    overflow-y: auto;
  }

  .contact-modal.active .contact-modal__container {
    transform: scale(1) translateY(0);
  }

  .contact-modal__close {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    width: 44px;
    height: 44px;
    background-color: #15152a;
    border: none;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition:
      background-color 0.3s cubic-bezier(0.4, 0, 0.2, 1),
      transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 10;
  }

  .contact-modal__close:hover {
    background-color: #fcc419;
    transform: rotate(90deg);
  }

  .contact-modal__close span {
    position: absolute;
    width: 18px;
    height: 2px;
    background-color: #f7efe6;
    transition: background-color 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .contact-modal__close:hover span {
    background-color: #15152a;
  }

  .contact-modal__close span:first-child {
    transform: rotate(45deg);
  }

  .contact-modal__close span:last-child {
    transform: rotate(-45deg);
  }

  .contact-modal__content {
    width: 100%;
  }

  /* Form Styles */
  .contact-container {
    max-width: 700px;
    margin: 0 auto;
  }

  .contact-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .contact-label {
    display: inline-block;
    font-family: "Neue Montreal", sans-serif;
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    color: #fcc419;
    font-weight: 600;
    margin-bottom: 1rem;
    padding: 0.4rem 1rem;
    background: #15152a;
    border-radius: 100px;
  }

  .contact-title {
    font-family: "Monument Extended", sans-serif;
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    color: #15152a;
    text-transform: uppercase;
    letter-spacing: -0.02em;
    margin-bottom: 1rem;
    line-height: 1.1;
  }

  .contact-subtitle {
    font-family: "Neue Montreal", sans-serif;
    font-size: 1rem;
    color: rgba(21, 21, 42, 0.6);
    line-height: 1.6;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .form-group.full-width {
    grid-column: 1 / -1;
  }

  label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .label-text {
    font-family: "Neue Montreal", sans-serif;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #15152a;
    font-weight: 500;
  }

  .input-wrapper {
    position: relative;
  }

  input,
  textarea {
    width: 100%;
    padding: 1rem 0;
    background: transparent;
    border: none;
    border-bottom: 1px solid rgba(21, 21, 42, 0.15);
    font-family: "Neue Montreal", sans-serif;
    font-size: 1rem;
    color: #15152a;
    outline: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  input::placeholder,
  textarea::placeholder {
    color: rgba(21, 21, 42, 0.4);
  }

  input:focus,
  textarea:focus {
    border-bottom-color: transparent;
  }

  textarea {
    resize: vertical;
    min-height: 100px;
  }

  .input-line {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: #fcc419;
    transition: width 0.4s cubic-bezier(0.19, 1, 0.22, 1);
  }

  input:focus ~ .input-line,
  textarea:focus ~ .input-line {
    width: 100%;
  }

  .form-footer {
    margin-top: 1rem;
  }

  .submit-button {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    width: 100%;
    padding: 1.25rem 2.5rem;
    background: #15152a;
    color: #f7efe6;
    font-family: "Monument Extended", sans-serif;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border: none;
    border-radius: 100px;
    cursor: pointer;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.19, 1, 0.22, 1);
  }

  .submit-button:hover {
    background: #fcc419;
    color: #15152a;
    transform: translateY(-3px);
    box-shadow: 0 15px 40px rgba(21, 21, 42, 0.2);
  }

  .submit-button:disabled {
    opacity: 0.7;
    cursor: not-allowed;
    transform: none;
  }

  .btn-loader {
    display: none;
    width: 20px;
    height: 20px;
    border: 2px solid currentColor;
    border-top-color: transparent;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  .submit-button.loading .btn-text,
  .submit-button.loading .btn-icon {
    display: none;
  }

  .submit-button.loading .btn-loader {
    display: block;
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  .btn-icon {
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .submit-button:hover .btn-icon {
    transform: translateX(5px);
  }

  .form-message {
    margin-top: 1.5rem;
    padding: 1.25rem;
    border-radius: 12px;
    animation: slideUp 0.4s cubic-bezier(0.19, 1, 0.22, 1);
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .form-message.success {
    background: rgba(21, 21, 42, 0.05);
    border: 1px solid rgba(21, 21, 42, 0.1);
  }

  .form-message.error {
    background: rgba(220, 38, 38, 0.05);
    border: 1px solid rgba(220, 38, 38, 0.2);
  }

  .message-content {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .message-icon {
    flex-shrink: 0;
    color: #15152a;
  }

  .form-message.error .message-icon {
    color: #dc2626;
  }

  .message-text {
    font-family: "Neue Montreal", sans-serif;
    font-size: 0.95rem;
    color: #15152a;
  }

  .form-message.error .message-text {
    color: #dc2626;
  }

  .hidden {
    display: none;
  }

  @media (max-width: 768px) {
    .contact-modal__container {
      padding: 2rem 1rem;
      width: 95%;
    }

    .contact-modal__close {
      top: 1rem;
      right: 1rem;
      width: 40px;
      height: 40px;
    }

    .form-row {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .contact-title {
      font-size: 1.5rem;
    }
  }

  :global(body.modal-open) {
    overflow: hidden;
  }
</style>

<script>
  // Modal Logic
  const contactModal = document.getElementById("contact-modal");
  const contactModalClose = document.getElementById("contact-modal-close");
  const contactBackdrop = document.querySelector(".contact-modal__backdrop");

  function openContactModal() {
    contactModal?.classList.add("active");
    document.body.classList.add("modal-open");
  }

  function closeContactModal() {
    contactModal?.classList.remove("active");
    document.body.classList.remove("modal-open");
  }

  // Expose open function globally so other components can use it
  (window as any).openContactModal = openContactModal;

  // Event Listeners
  contactModalClose?.addEventListener("click", closeContactModal);
  contactBackdrop?.addEventListener("click", closeContactModal);

  // Close modal on escape key
  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape") {
      closeContactModal();
    }
  });

  // Listen for custom event to open modal
  document.addEventListener("open-contact-modal", openContactModal);

  // Form Logic
  const form = document.getElementById("contact-form") as HTMLFormElement;
  const submitBtn = document.getElementById("submit-btn") as HTMLButtonElement;
  const formMessage = document.getElementById("form-message") as HTMLDivElement;
  const messageText = formMessage?.querySelector(
    ".message-text",
  ) as HTMLSpanElement;

  // Phone formatting with better editing support
  const phoneInput = document.getElementById("phone") as HTMLInputElement;

  phoneInput?.addEventListener("input", (e) => {
    const input = e.target as HTMLInputElement;
    const cursorPosition = input.selectionStart || 0;
    const oldValue = input.value;
    const oldLength = oldValue.length;

    // Extract only digits
    let value = oldValue.replace(/\D/g, "");

    // Limit to 10 digits
    if (value.length > 10) value = value.slice(0, 10);

    // Format the number
    let formatted = "";
    if (value.length >= 6) {
      formatted = `(${value.slice(0, 3)}) ${value.slice(3, 6)}-${value.slice(6)}`;
    } else if (value.length >= 3) {
      formatted = `(${value.slice(0, 3)}) ${value.slice(3)}`;
    } else {
      formatted = value;
    }

    // Update value
    input.value = formatted;

    // Restore cursor position intelligently
    const newLength = formatted.length;
    const lengthDiff = newLength - oldLength;
    let newCursorPosition = cursorPosition + lengthDiff;

    // Adjust cursor to skip over formatting characters
    if (newCursorPosition > 0 && formatted[newCursorPosition - 1] === "(") {
      newCursorPosition++;
    } else if (
      newCursorPosition > 0 &&
      (formatted[newCursorPosition - 1] === ")" ||
        formatted[newCursorPosition - 1] === " " ||
        formatted[newCursorPosition - 1] === "-")
    ) {
      if (lengthDiff > 0) newCursorPosition++;
    }

    input.setSelectionRange(newCursorPosition, newCursorPosition);
  });

  // Allow backspace and delete to work naturally
  phoneInput?.addEventListener("keydown", (e) => {
    const input = e.target as HTMLInputElement;
    const cursorPosition = input.selectionStart || 0;
    const value = input.value;

    // Handle backspace on formatting characters
    if (e.key === "Backspace" && cursorPosition > 0) {
      const charBefore = value[cursorPosition - 1];
      if (
        charBefore === "(" ||
        charBefore === ")" ||
        charBefore === " " ||
        charBefore === "-"
      ) {
        e.preventDefault();
        const digitsOnly = value.replace(/\D/g, "");
        const newDigits = digitsOnly.slice(0, -1);

        let formatted = "";
        if (newDigits.length >= 6) {
          formatted = `(${newDigits.slice(0, 3)}) ${newDigits.slice(3, 6)}-${newDigits.slice(6)}`;
        } else if (newDigits.length >= 3) {
          formatted = `(${newDigits.slice(0, 3)}) ${newDigits.slice(3)}`;
        } else {
          formatted = newDigits;
        }

        input.value = formatted;
        const newPosition = Math.max(0, cursorPosition - 2);
        input.setSelectionRange(newPosition, newPosition);
      }
    }
  });

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    submitBtn.classList.add("loading");
    submitBtn.disabled = true;
    formMessage.classList.add("hidden");

    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries());

    try {
      const response = await fetch("/server/contact.php", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify(data),
      });

      const result = await response.json();

      if (response.ok) {
        formMessage.className = "form-message success";
        messageText.textContent =
          "¡Gracias! Tu mensaje ha sido enviado. Te contactaremos pronto.";
        form.reset();
        // Close modal after success
        setTimeout(() => {
          closeContactModal();
          formMessage.classList.add("hidden");
        }, 3000);
      } else {
        throw new Error(
          result.message || "Hubo un error al enviar el formulario.",
        );
      }
    } catch (error: any) {
      formMessage.className = "form-message error";
      messageText.textContent =
        error.message ||
        "Hubo un error al enviar el formulario. Por favor intenta de nuevo.";
    } finally {
      formMessage.classList.remove("hidden");
      submitBtn.classList.remove("loading");
      submitBtn.disabled = false;
    }
  });
</script>
