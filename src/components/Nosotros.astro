<section id="nosotros" class="nosotros">
  <div class="nosotros-container">
    <div class="nosotros-header">
      <h2 class="section-title">Nosotros</h2>
      <div class="header-line"></div>
    </div>

    <div class="services-grid">
      <div class="service-card" data-service="comercial">
        <div class="service-bg"></div>
        <div class="service-content">
          <span class="service-number">01</span>
          <h3 class="service-title">Comercial</h3>
          <ul class="service-list">
            <li>Estrategias</li>
            <li>Maximización</li>
            <li>Propiedades</li>
          </ul>
        </div>
      </div>

      <div class="service-card" data-service="administracion">
        <div class="service-bg"></div>
        <div class="service-content">
          <span class="service-number">02</span>
          <h3 class="service-title">Administración</h3>
          <ul class="service-list">
            <li>Gestión</li>
            <li>Rentabilidad</li>
            <li>Mantenimiento</li>
          </ul>
        </div>
      </div>

      <div class="service-card" data-service="living">
        <div class="service-bg"></div>
        <div class="service-content">
          <span class="service-number">03</span>
          <h3 class="service-title">Living</h3>
          <ul class="service-list">
            <li>Residencial</li>
            <li>Alta Gama</li>
            <li>Sofisticación</li>
          </ul>
        </div>
      </div>

      <div class="service-card" data-service="paddel">
        <div class="service-bg"></div>
        <div class="service-content">
          <span class="service-number">04</span>
          <h3 class="service-title">Paddel</h3>
          <ul class="service-list">
            <li>Deportivo</li>
            <li>Desarrollo</li>
            <li>Comercialización</li>
          </ul>
        </div>
      </div>
    </div>

    <div class="nosotros-footer">
      <p>Expertos en el mercado inmobiliario comercial</p>
    </div>
  </div>
</section>

<style>
  .nosotros {
    position: relative;
    width: 100%;
    min-height: 100vh;
    background-color: #f7efe6;
    padding: 10vh 5vw;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    z-index: 1;
  }

  .nosotros-container {
    width: 100%;
    max-width: 1600px;
    margin: 0 auto;
  }

  .nosotros-header {
    margin-bottom: 8vh;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .section-title {
    font-family: "Monument Extended", sans-serif;
    font-size: clamp(2.5rem, 8vw, 10rem);
    color: #15152a;
    font-weight: 800;
    line-height: 0.85;
    text-transform: uppercase;
    margin-bottom: 20px;
    letter-spacing: -0.04em;
    opacity: 0;
    transform: translateY(50px);
    width: 100%;
  }

  .header-line {
    width: 0;
    height: 4px;
    background-color: #15152a;
    margin: 0 auto;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1px;
    background-color: rgba(21, 21, 42, 0.1);
    margin-bottom: 8vh;
    border: 1px solid rgba(21, 21, 42, 0.1);
  }

  .service-card {
    position: relative;
    height: 50vh;
    padding: 40px 30px;
    background-color: #f7efe6;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    cursor: pointer;
    overflow: hidden;
    transition: background-color 0.6s ease;
    opacity: 0;
    transform: translateY(100px);
  }

  .service-card[data-service="administracion"] {
    background-color: #f0e6db;
  }
  .service-card[data-service="living"] {
    background-color: #e9ddd0;
  }
  .service-card[data-service="paddel"] {
    background-color: #e2d4c5;
  }

  .service-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #15152a;
    transform: scaleY(0);
    transform-origin: bottom;
    transition: transform 0.7s cubic-bezier(0.19, 1, 0.22, 1);
    z-index: 1;
  }

  .service-card:hover .service-bg {
    transform: scaleY(1);
  }

  .service-content {
    position: relative;
    z-index: 2;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .service-number {
    font-family: "Neue Montreal", sans-serif;
    font-size: 0.9rem;
    color: #15152a;
    font-weight: 500;
    margin-bottom: 20px;
    display: block;
  }

  .service-title {
    font-family: "Monument Extended", sans-serif;
    font-size: clamp(1.2rem, 1.8vw, 2rem);
    color: #15152a;
    font-weight: 700;
    text-transform: uppercase;
    margin-bottom: 30px;
    line-height: 1;
    letter-spacing: -0.02em;
  }

  .service-list {
    list-style: none;
    padding: 0;
    margin-top: auto;
  }

  .service-list li {
    font-family: "Neue Montreal", sans-serif;
    font-size: 0.9rem;
    color: #15152a;
    text-transform: uppercase;
    margin-bottom: 10px;
    letter-spacing: 0.05em;
    opacity: 0.8;
    font-weight: 500;
  }

  .service-card:hover .service-number,
  .service-card:hover .service-title,
  .service-card:hover .service-list li {
    color: #f7efe6 !important;
    opacity: 1;
  }

  .nosotros-footer {
    text-align: center;
    margin-top: 4vh;
    opacity: 0;
  }

  .nosotros-footer p {
    font-family: "Monument Extended", sans-serif;
    font-size: clamp(0.9rem, 1.5vw, 1.5rem);
    color: #15152a;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: -0.02em;
  }

  /* Responsive Adjustments */
  @media (max-width: 1200px) {
    .services-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2px;
    }
    .service-card {
      height: 40vh;
      min-height: 320px;
    }
  }

  @media (max-width: 768px) {
    .nosotros {
      padding: 8vh 6vw;
      min-height: auto;
    }

    .nosotros-header {
      margin-bottom: 6vh;
    }

    .section-title {
      font-size: 2.5rem;
      margin-bottom: 15px;
    }

    .services-grid {
      grid-template-columns: 1fr;
      gap: 3px;
      margin-bottom: 6vh;
    }

    .service-card {
      height: auto;
      min-height: 280px;
      padding: 35px 30px;
    }

    .service-number {
      font-size: 0.85rem;
      margin-bottom: 15px;
    }

    .service-title {
      font-size: 1.5rem;
      margin-bottom: 25px;
    }

    .service-list li {
      font-size: 0.85rem;
      margin-bottom: 8px;
    }

    .nosotros-footer {
      margin-top: 3vh;
    }

    .nosotros-footer p {
      font-size: 0.95rem;
      line-height: 1.4;
      padding: 0 10px;
    }
  }

  /* Aspect Ratio Adjustments */
  @media (min-aspect-ratio: 16/10) {
    .service-card {
      height: 45vh;
    }
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  const tl = gsap.timeline({
    scrollTrigger: {
      trigger: ".nosotros",
      start: "top 70%",
      toggleActions: "play none none reverse",
    },
  });

  tl.to(".section-title", {
    y: 0,
    opacity: 1,
    duration: 1.2,
    ease: "power4.out",
  })
    .to(
      ".header-line",
      {
        width: "100%",
        duration: 0.8,
        ease: "power2.inOut",
      },
      "-=0.8",
    )
    .to(
      ".service-card",
      {
        y: 0,
        opacity: 1,
        duration: 0.8,
        stagger: 0.1,
        ease: "power3.out",
      },
      "-=0.4",
    )
    .to(
      ".nosotros-footer",
      {
        opacity: 1,
        duration: 0.8,
        ease: "power2.out",
      },
      "-=0.4",
    );
</script>
