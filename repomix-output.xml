// Get all plaza images at build time
const plazaImages = import.meta.glob("/public/plazas/**/*.{webp,jpg,png,jpeg}", { eager: true });

// Helper function to get all images for a plaza folder
function getPlazaImages(folderName: string): string[] {
  const mainImage: string[] = [];
  const otherImages: string[] = [];
  const folderPath = `/public/plazas/${folderName}/`;
  
  for (const [path, _mod] of Object.entries(plazaImages)) {
    if (path.includes(folderPath)) {
      // Convert /public/... to actual URL path
      const urlPath = path.replace('/public', '');
      
      if (path.includes('main.webp')) {
        mainImage.push(urlPath);
      } else {
        otherImages.push(urlPath);
      }
    }
  }
  
  // Sort other images to ensure consistent order (plaza-1, plaza-2, etc.)
  otherImages.sort((a, b) => {
    const numA = parseInt(a.match(/plaza-(\d+)/)?.[1] || '0');
    const numB = parseInt(b.match(/plaza-(\d+)/)?.[1] || '0');
    return numA - numB;
  });
  
  // Return main image first, followed by other images
  return [...mainImage, ...otherImages];
}

