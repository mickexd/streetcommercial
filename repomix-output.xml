  }

  /* Aspect Ratio Adjustments */
  @media (min-aspect-ratio: 16/10) {
    .service-card {
      height: 45vh;
    }
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  // GSAP Animations
  const tl = gsap.timeline({
    scrollTrigger: {
      trigger: ".nosotros",
      start: "top 70%",
      toggleActions: "play none none reverse",
    },
  });

  tl.to(".section-title", {
    y: 0,
    opacity: 1,
    duration: 1.2,
    ease: "power4.out",
  })
    .to(
      ".header-line",
      {
        width: "100%",
        duration: 0.8,
        ease: "power2.inOut",
      },
      "-=0.8",
    )
    .to(
      ".service-card",
      {
        y: 0,
        opacity: 1,
        duration: 0.8,
        stagger: 0.1,
        ease: "power3.out",
      },
      "-=0.4",
    )
    .to(
      ".nosotros-footer",
      {
        opacity: 1,
        duration: 0.8,
        ease: "power2.out",
      },
      "-=0.4",
    );

  // Modal Logic
  const serviceCards = document.querySelectorAll(".service-card");
  const modalOverlay = document.getElementById("modal-overlay");
  const modalBody = document.querySelector(".modal-body");
  const modalClose = document.querySelector(".modal-close");
  const modalBackdrop = document.querySelector(".modal-backdrop");

  let hoverTimeout: ReturnType<typeof setTimeout> | null = null;
  let isModalOpen = false;
  let preloaderComplete = false;

  // Listen for preloader completion
  window.addEventListener("preloaderComplete", () => {
    preloaderComplete = true;
  });

  // Check if preloader already completed (in case event was fired before listener added)
  if (!document.body.classList.contains("preloader-active")) {
    preloaderComplete = true;
  }

  const openModal = (serviceType: string) => {
    // Don't open modal if preloader is still active
    if (!preloaderComplete) return;

    const templateId = `service-data-${serviceType}`;
    const template = document.getElementById(
      templateId,
    ) as HTMLTemplateElement | null;

    if (template && modalBody) {
      modalBody.innerHTML = "";
      modalBody.appendChild(template.content.cloneNode(true));
      modalOverlay?.classList.add("active");
      document.body.style.overflow = "hidden";
      isModalOpen = true;
    }
  };

  const closeModal = () => {
    modalOverlay?.classList.remove("active");
    document.body.style.overflow = "";
    isModalOpen = false;
  };

  // Detect touch device
  const isTouchDevice = window.matchMedia("(pointer: coarse)").matches;

  serviceCards.forEach((card) => {
    const serviceType = card.getAttribute("data-service");
    if (!serviceType) return;

    if (isTouchDevice) {
      // Mobile: Click to open
      card.addEventListener("click", () => {
        openModal(serviceType);
      });
    } else {
      // Desktop: Hover with delay
      card.addEventListener("mouseenter", () => {
        hoverTimeout = setTimeout(() => {
          openModal(serviceType);
        }, 400);
      });

      card.addEventListener("mouseleave", () => {
        if (hoverTimeout) {
          clearTimeout(hoverTimeout);
          hoverTimeout = null;
        }
      });
    }
  });

  // Close modal events
  modalClose?.addEventListener("click", closeModal);
  modalBackdrop?.addEventListener("click", closeModal);

  // Close on escape key
  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape" && isModalOpen) {
      closeModal();
    }
  });
</script>
